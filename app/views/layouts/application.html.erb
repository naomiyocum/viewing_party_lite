<!DOCTYPE html>
<html>
  <head>
    <title>ViewingPartyLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <div style="color:red;font-weight:bold;">
        <%= msg %>
      </div>
    <% end %>
    <%= link_to 'Home', root_path %>&nbsp;&nbsp;
    <%= link_to 'Log In', '/login' if session[:user_id] == nil %>
    <%= link_to 'Log Out', '/logout' if session[:user_id] != nil %>
    <h1><center>Viewing Party</center></h1>
    <%= yield %>
  </body>
</html>
